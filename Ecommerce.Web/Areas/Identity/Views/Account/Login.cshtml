@using Ecommerce.Application.ViewModels
@model LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Login Account</h4>
            </div>

            <div class="card-body">
                <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? "/")" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label>Email</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label>Password</label>
                    </div>

                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input asp-for="RememberMe" class="form-check-input" />
                            Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>

            </div>
            <div class="card-footer text-center">
                Don't have an account?
                <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register here</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}