@using Ecommerce.Domain.Entities
@model IEnumerable<Product>

<div class="row py-2">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-1">
                <div class="col-12 p-1" style="border:1px solid #0066cc; border-radius:4px">
                    <div class="card pt-1">
                        <img src="@item.Picture" class="card-img-top rounded" />
                        <div class="card-body">
                            <div px-1>
                                <p class="card-title h5 text-primary">@item.Name  </p>
                                <p class=px-1>
                                    <span style="color: green;font-weight: bold;">
                                        $ @item.Price.ToString("0.00")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>