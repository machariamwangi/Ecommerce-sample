@{
    Layout = null;
    var title = ViewBag.Title ?? "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <!-- Custom CSS -->
    <link href="~/css/adminCss.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar" class="bg-dark border-end">
            <div class="sidebar-header text-center py-4">
                <h3 class="text-white mb-0">Admin Panel</h3>
            </div>
            <div class="text-center mb-4">               
            </div>
         
            <div class="list-group list-group-flush">
                <div class="list-group-item list-group-item-dark text-uppercase small fw-bold">Main Navigation</div>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                    <span class="me-2">🏠</span> Dashboard
                </a>
                                
                <button class="list-group-item list-group-item-action bg-dark text-white d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#ProductMenu">
                    <span><span class="me-2">🗂️</span> Products</span> <span>▶</span>
                </button>
                <div class="collapse" id="ProductMenu">
                    <a class="list-group-item list-group-item-action bg-dark text-white ps-5"
                       asp-area="Admin" asp-controller="Product" asp-action="">Products</a>
                    <a class="list-group-item list-group-item-action bg-dark text-white ps-5"
                       asp-area="Admin" asp-controller="Product" asp-action="Upsert">Add Product</a>
                </div>
                <button class="list-group-item list-group-item-action bg-dark text-white d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#CategoryMenu">
                    <span><span class="me-2">🗂️</span> Categories</span> <span>▶</span>
                </button>
                <div class="collapse" id="CategoryMenu">
                    <a class="list-group-item list-group-item-action bg-dark text-white ps-5"
                       asp-area="Admin" asp-controller="Category" asp-action="">Categories</a>
                    <a class="list-group-item list-group-item-action bg-dark text-white ps-5"
                       asp-area="Admin" asp-controller="Category" asp-action="Create">Add Category</a>
                </div>
                <button class="list-group-item list-group-item-action bg-dark text-white d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#OrderMenu">
                    <span><span class="me-2">🗂️</span> Orders</span> <span>▶</span>
                </button>
                <div class="collapse" id="OrderMenu">
                    <a class="list-group-item list-group-item-action bg-dark text-white ps-5"
                       asp-area="Admin" asp-controller="Order" asp-action="">Orders</a>
                </div>



              
            </div>
        </div>
       
        <div id="page-content-wrapper" class="w-100">
            
            <nav class="navbar navbar-expand navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-dark" id="menu-toggle">☰</button>
                    <ol class="breadcrumb mb-0 ms-3">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@title</li>
                    </ol>
                    <div class="ms-auto d-flex align-items-center">
                        <partial name="_LoginPartial" />
                       
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/adminSite.js"></script>
</body>
</html>

